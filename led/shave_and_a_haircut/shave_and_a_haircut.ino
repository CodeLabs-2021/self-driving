  digitalWrite(13, HIGH);
  delay(800);
  digitalWrite(13, LOW);
  delay(200);
  // and
  digitalWrite(13, HIGH);
  delay(500);
  digitalWrite(13, LOW);
  delay(150);
  // a
  digitalWrite(13, HIGH);
  delay(500);
  digitalWrite(13, LOW);
  delay(100);
  // hair
  digitalWrite(13, HIGH);
  delay(1100);
  digitalWrite(13, LOW);
  delay(100);
  // cut 
  digitalWrite(13, HIGH);
  delay(1000);
  digitalWrite(13, LOW);
  delay(1000);
  // two
  digitalWrite(13, HIGH);
  delay(800);
  digitalWrite(13, LOW);
  delay(200);
  // bits
  digitalWrite(13, HIGH);
  delay(1000);
  digitalWrite(13, LOW);
  delay(2000);
}
